<div class="w-full h-full flex flex-col gap-12 md:gap-4 md:flex-row items-center justify-center px-5 py-10">  
  
  <div class="custom-box h-[90vh] flex-col gap-3 md:basis-2/5 justify-between items-center">
    <div class="flex flex-row justify-between items-center font-medium mb-2">
      <h1 class="text-xl sm:text-3xl text-center">⟡ Kandit Tanthanathewin</h1>
      <h1 class="text-sm text-center hidden sm:block">ƃuᴉɯ</h1> 
    </div>
    <hr class="w-full border-[#420d05] mb-3">
    <div class="h-auto rounded-2xl mb-3 bg-[#202528] scroll-m-0">
      <div class="p-3 mt-3">
        <% if @photo.present? %>
          <%= render @photo %>
        <% end %>
      </div>
    </div>
    
    <div class="mb-4 relative">
      <div class="absolute mt-1 inset-0 w-full h-11 rounded-lg bg-[#631407]"></div>
      <%= link_to "Let's see my Brag", brags_path, class: "z-10 relative rounded-lg px-3.5 py-2.5 bg-[#f3654f] hover:translate-y-1 hover:bg-[#f0482d] active:bg-[#631407] text-white block font-medium text-center" %>
    </div>
    <hr class="w-full border-[#420d05] mb-3">
    <h1 class="font-bold text-2xl text-center">Assign new mission</h1>

    <%= render "form", quest: @questnew %>
  </div>
  <div class="custom-box p-4 md:h-[90vh] md:basis-[30%] ">
    <div id="quests" class="md:overflow-y-auto md:h-[85vh] md:pr-3 w-full  
      [&::-webkit-scrollbar]:w-1
      [&::-webkit-scrollbar-track]:rounded-full
      [&::-webkit-scrollbar-track]:bg-none
      [&::-webkit-scrollbar-thumb]:rounded-full
      [&::-webkit-scrollbar-thumb]:bg-[#c8280e]">
      <% if @questsunchecked.any? %>
        <% @questsunchecked.each do |quest| %>
          <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
            <%= render quest %>
            <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
              <%= button_to "Destroy", quest, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center my-10">No quests found.</p>
      <% end %>
    </div>
  </div>

 <div class="custom-box p-4 md:h-[90vh] md:basis-[30%] ">
  <div id="quests" class="md:overflow-y-auto md:h-[85vh] md:pr-3 w-full  
    [&::-webkit-scrollbar]:w-1
