    [&::-webkit-scrollbar-track]:bg-none
    [&::-webkit-scrollbar-thumb]:rounded-full
    [&::-webkit-scrollbar-thumb]:bg-[#c8280e]">
    <% if @questschecked.any? %>
      <% @questschecked.each do |quest| %>
        <div class="flex flex-row justify-between items-center pb-0">
          <%= render quest %>
          <div class="w-auto flex flex-row space-x-2 space-y-2">
            <%= button_to quest, method: :delete,
                class: "w-10 h-10 rounded-full bg-red-600 hover:bg-red-500 flex items-center justify-center text-white",
                data: { turbo_confirm: "Are you sure?" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4a1 1 0 011 1v1H9V4a1 1 0 011-1z" />
              </svg>
            <% end %>
          </div>
          
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No quests found.</p>
    <% end %>
  </div>
</div>
</div>
