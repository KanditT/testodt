<div id="<%= dom_id quest %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= quest.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= form_with model: quest, local: true, html: { class: "inline-block" } do |form| %>
      <%= form.check_box :status, { 
            checked: quest.status?, 
            onchange: "this.form.submit();" 
          }, "true", "false" %>
      <%= form.label :status, quest.status? ? "Active" : "Inactive", class: "ml-2" %>
    <% end %>
  </div>
</div>